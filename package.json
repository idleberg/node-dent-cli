{
	"name": "@nsis/dent-cli",
	"version": "0.1.2",
	"description": "An opinionated code formatter for NSIS scripts",
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"dev": "npm run start",
		"fix": "eslint --fix ./src",
		"lint:json": "eslint ./*.json --ignore-path .gitignore",
		"lint:ts": "eslint ./src --ignore-path .gitignore",
		"lint": "npm-run-all --parallel lint:*",
		"prepack": "npm run build",
		"start": "npm run build -- --watch",
		"test": "echo \"Tests pending\" && exit 0",
		"prepare": "husky install"
	},
	"files": [
		"bin/",
		"LICENSE",
		"README.md"
	],
	"type": "module",
	"typings": "bin/cli.d.ts",
	"bin": {
		"dent": "index.mjs"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/node-dent-cli.git"
	},
	"keywords": [
		"nsis",
		"formatter"
	],
	"dependencies": {
		"@nsis/dent": "^0.4.1",
		"commander": "^11.1.0",
		"glob": "^10.3.10",
		"log-symbols": "^6.0.0",
		"picocolors": "^1.0.0"
	},
	"devDependencies": {
		"@types/node": "^18.19.3",
		"@typescript-eslint/eslint-plugin": "^6.16.0",
		"@typescript-eslint/parser": "^6.16.0",
		"eslint": "^8.56.0",
		"eslint-plugin-json": "^3.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^15.2.0",
		"npm-run-all2": "^6.1.1",
		"tslib": "^2.6.2",
		"tsup": "^8.0.1",
		"typescript": "^5.3.3"
	},
	"lint-staged": {
		"*.(json|ts)": "eslint --cache --fix"
	}
}
