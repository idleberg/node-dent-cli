{
	"name": "@nsis/dent-cli",
	"version": "0.1.1",
	"description": "An opinionated code formatter for NSIS scripts",
	"license": "MIT",
	"scripts": {
		"build": "rollup --config",
		"dev": "npm run start",
		"fix": "eslint --fix ./src",
		"lint:json": "eslint ./*.json --ignore-path .gitignore",
		"lint:ts": "eslint ./src --ignore-path .gitignore",
		"lint": "npm-run-all --parallel lint:*",
		"prepack": "npm run build",
		"start": "npm run build -- --watch",
		"test": "echo \"Tests pending\" && exit 0",
		"prepare": "husky install"
	},
	"files": [
		"bin/",
		"LICENSE",
		"README.md"
	],
	"type": "module",
	"bin": {
		"dent": "index.mjs"
	},
	"engines": {
		"node": "^14.13.1 || >=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/node-dent-cli.git"
	},
	"keywords": [
		"nsis",
		"formatter"
	],
	"dependencies": {
		"@nsis/dent": "^0.2.2",
		"commander": "^10.0.1",
		"glob": "^10.2.6",
		"log-symbols": "^5.1.0",
		"picocolors": "^1.0.0"
	},
	"devDependencies": {
		"@rollup/plugin-json": "^6.0.0",
		"@rollup/plugin-typescript": "^11.1.1",
		"@types/node": "^20.2.3",
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"@typescript-eslint/parser": "^5.59.6",
		"eslint": "^8.41.0",
		"eslint-plugin-json": "^3.1.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"npm-run-all2": "^6.0.5",
		"rollup": "^3.23.0",
		"tslib": "^2.5.2",
		"typescript": "^5.0.4"
	},
	"lint-staged": {
		"*.(json|ts)": "eslint --cache --fix"
	}
}
